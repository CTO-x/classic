<div>
<article role="article">
  <% if (page.title){ %>
  <header>
    <h1 class="entry-title"><%= post.title %></h1>
    <% if (page.date){ %><p class="meta"><%- partial('post/date', {class_name: 'article-date', date_format: null}) %></p><% } %>

  </header>
  <% } %>
  <%- post.content %>
  <% if (page.footer != false){ %>
    <footer>
      <% if (page.date || page.author){ %><p class="meta">
        <% if (page.author){ %><%- partial('_partial/post/author') %><% } %>
        <%- partial('post/date', {class_name: 'article-date', date_format: null}) %>
        <% if (page.categories){ %><%- partial('post/category') %><% } %>
      </p><% } %>
      <% if (page.sharing != false){ %>
        <%- partial('post/sharing') %>
      <% } %>
    </footer>
  <% } %>
</article>
<% if (config.disqus_short_name && page.comments == true){ %>
  <section>
    <h1>Comments</h1>
    <div id="disqus_thread" aria-live="polite"><%- partial('post/disqus_thread') %></div>
  </section>
<% } %>
</div>

<% if (theme.sidebar){ %>
  <aside class="sidebar">
    <% theme.widgets.forEach(function(widget){ %>
      <%- partial('_widget/' + widget) %>
    <% }) %>
  </aside>
<% } %>

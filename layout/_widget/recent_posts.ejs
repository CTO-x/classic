<% if (site.posts.length){ %>
<section>
  <h1><%= __('recent_posts') %></h1>
  <ul id="recent_posts">
    <% site.posts.sort('date', -1).limit(config.recent_posts).each(function(post){ %>
      <li class="post">
        <a href="<%- url_for(post.path) %>"><%= post.title || '(no title)' %></a>
      </li>
    <% }) %>
  </ul>
</section>
<% } %>

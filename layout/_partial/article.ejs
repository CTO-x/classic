<% if (page.no_header != false){ %>
  <header>
    <% if (index){ %>
      <h1 class="entry-title"><a href="<%- url_for(post.path) %>"><%= post.title %></a></h1>
    <% }else{ %>
      <h1 class="entry-title"><%= page.title %></h1>
    <% } %>
    <% if (page.meta != false){ %>
      <p class="meta">
        <% if (index){ %>
          <%- partial('post/date', {page:post, date_format: config.date_format}) %>
        <% }else{ %>
          <%- partial('post/date', {date_format: config.date_format}) %>
        <% } %>
        <% if (config.disqus_shortname && page.comments != false ){ %>
           | <a href="<% if (index){ %><%- url_for(post.path) %><% } %>#disqus_thread" <% if (index){ %>data-disqus-identifier="<%- url_for(post.permalink) %>"<% } %>>Comments</a>
        <% } %>
      </p>
    <% } %>
  </header>
<% } %>
<% if (index){ %>
  <div class="entry-content"><%- post.excerpt || post.content %></div>
  <% if (theme.excerpt_link && post.excerpt){ %>
    <footer>
      <a rel="full-article" href="<%- url_for(post.path) %>#more"><%= theme.excerpt_link %></a>
    </footer>
  <% } %>
<% }else{ %>
<div class="entry-content"><%- page.content %></div>
<% } %>

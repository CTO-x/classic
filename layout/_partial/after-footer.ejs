<% if (config.disqus_shortname){ %>

<% if (theme.widgets && /recent_comments/.test(theme.widgets)){ %>
  <div id="dsqComment" style="display:none;">
    <script src="//<%= config.disqus_shortname.toLocaleLowerCase() %>.disqus.com/recent_comments_widget.js?num_items=5&hide_avatars=0&avatar_size=48&excerpt_length=200&hide_mods=0" type="text/javascript"></script>
  </div>
<% } %>
<script>
    var disqus_shortname = '<%= config.disqus_shortname %>',
        disqus_script = 'count.js';
        
    <% if (page.comments){ %>
      var disqus_identifier = '<%= page.permalink %>';
      var disqus_url = '<%= page.permalink %>';
      var disqus_script = 'embed.js';
    <% } %>
  (function () {
    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
    dsq.src = '//' + disqus_shortname + '.disqus.com/' + disqus_script;
    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
  }());
  
  $(function(){
    $('#recent_comments_widget').append($('#dsqComment').find('ul'));
  })
  console.log(<%= theme.fancybox %>)
</script>
<% } %>


<% if (theme.fancybox){ %>
  <%- css('fancybox/jquery.fancybox') %>
  <%- js('fancybox/jquery.fancybox.pack') %>
<% } %>


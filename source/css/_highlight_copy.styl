#global-zeroclipboard-html-bridge 
  background none
  border-bottom none
.widget-codetool 
  opacity .99
  float right
  margin -27px -15px 0 0
@media only screen and (max-width: 992px)
  .widget-codetool
    margin-top -25px
@media only screen and (min-width: 992px)
  .widget-codetool
    margin-top -27px
.widget-codetool 
  button 
    color #fff
    background-color #333
    background-color rgba(0,0,0,0.75)
.zeroclipboard-is-hover, .zeroclipboard-is-active 
  background #999
.btn-xs, .btn-group-xs>.btn 
  padding 2px 5px
  font-size 12px
  line-height 1.5
  border-radius 3px
.btn 
  outline none
  display inline-block
  margin-bottom 0
  font-weight normal
  text-align center
  vertical-align middle
  cursor pointer
  background-image none
  border none
  white-space nowrap
  font-size 12px
  line-height 1.5
  border-radius 3px
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
button 
  font-family inherit
  font-size inherit
  line-height inherit
  -webkit-appearance button
  cursor pointer
  text-transform none
  overflow visible
  color inherit
  font inherit
  margin 0
.tooltip 
  position fixed
  margin -18px 0 0 -38px
  top 50%
  left 50%
  z-index 1070
  display block
  visibility visible
  font-size 12px
  line-height 1.4
  border-radius 25px
  box-shadow 0 0 30px #cacaca
  opacity 0.3
  filter unquote('alpha(opacity=30)')
  &.top 
    padding 6px 12px
  &.in 
    opacity 0.9
    filter unquote('alpha(opacity=90)')
.fade 
  opacity 0
  -webkit-transition opacity 0.15s linear
  -o-transition opacity 0.15s linear
  transition opacity 0.15s linear
  &.in 
    opacity 1
.tooltip-inner 
  max-width 200px
  padding 3px 8px
  color #333
  text-align center
  text-decoration none
  background none
  border-radius 3px
